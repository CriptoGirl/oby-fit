extends ../layout

block content
  //<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.0/jquery.min.js"></script>
  //<script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>
  br
  h2 Start ObyFit Challenge

  // JavaScript section

  if user_data_form
    // Form section
    form(method='POST' action='/sign_up')

      div.form-group
      div.form-row
        div.col-md-3
          label(for='email' ) E-mail:
          input.form-control(
            id='email'
            name='email'
            type='email'
            required
          )

      div.form-row
        div.col-md-3
          label(for='wallet' ) Obyte Wallet Address:
          input.form-control(
            id='wallet'
            name='wallet'
            required
          )

      hr
      div.form-group
      div.form-row
        button.btn.btn-primary(type='submit') Sign up


    div(id='errorDiv')

    // Result Section
    br
    if result
      div.alert.alert-success.alert-dismissible(id='result')
        a.close( href='#' data-dismiss='alert' ) ×
        h4 User Data saved !
        p= result
      dif(id='Authorise')
        button.btn.btn-primary(type='submit') Authorise

    if error
      div.alert.alert-danger.alert-dismissible(id='errorDiv')
        a.close( href='#' data-dismiss='alert' ) ×
        strong Error:
        span  User data can not be saved !
        span= error

    if result
      p Result!
    br
    br
    br
