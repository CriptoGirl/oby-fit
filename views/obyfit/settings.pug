extends ../layout

block content
  //<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.0/jquery.min.js"></script>
  //<script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>
  br
  h2 ObyFit Challenge Set-up

  // JavaScript section

  // Form section
  form(method='POST' action='/challenge')

    div.form-group
    div.form-row
      div.col-md-3
        label(for='google_id' ) Google / E-mail Id:*
        input.form-control(
          id='google_id'
          name='google_id'
          required
        )

    div.form-row
      div.col-md-3
        label(for='prize' ) Prize (in bytes):*
        input.form-control(
          id='prize'
          name='prize'
          type='number'
          required
          min='50000'
          step='10000'
          placeholder="E.g. 1,000,0000 bytes"
          value='1000000'
        )

      div.col-md-3
        label(for='duration' ) Duration of the challenge:*
        select.form-control(
          id='duration'
          name='duration'
          type='number'
          required
        )
          option(value='1') 1 day challenge
          option(value='2') 2 day challenge
          option(value='3') 3 day challenge
          option(value='4') 4 day challenge
          option(value='5') 5 day challenge
          option(value='6') 6 day challenge
          option(value='7' selected="selected") 7 day challenge
          option(value='8') 8 day challenge
          option(value='9') 9 day challenge
          option(value='10') 10 day challenge

      div.col-md-3
        label(for='daily_goal') Daily Goal:*
        select.form-control(
          id='daily_goal'
          name='daily_goal'
          type='number'
          required
        )
          option(value='1000') 1,000 steps a day
          option(value='2000' selected="selected") 2,000 steps a day
          option(value='3000') 3,000 steps a day
          option(value='4000') 4,000 steps a day
          option(value='5000') 5,000 steps a day
          option(value='10000') 10,000 steps a day

    hr
    div.form-row
      div.col-md-3
        p Commission: 10,000 bytes

    hr
    div.form-group
    div.form-row
      button.btn.btn-primary(type='submit') Generate AA

    div(id='errorDiv')

    // Result Section
    br
    br
    br
